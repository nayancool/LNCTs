<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.lncts">

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.INTERNET"/>
    <application
        android:allowBackup="true"
        android:enabled="true"
        android:icon="@drawable/icon"
        android:label="@string/app_name"
        android:roundIcon="@drawable/icon"
        android:supportsRtl="true"
        android:theme="@style/Theme.LNCTs">
        <activity android:name=".MainActivity" >
            <intent-filter>
                <action android:name="android.intent.action.Main" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".teacherLogin"/>
        <activity android:name=".teacher_attendence_sheet" />
        <activity android:name=".take_attendence" />
        <activity android:name=".studentLogin" />
        <activity android:name=".student_attendence_sheet" />
        <activity android:name=".LoginActivity" />
        <activity android:name=".adminLogin" />
        <activity android:name=".admin_attendence_sheet" />
        <activity android:name=".addteacher" />
        <activity android:name=".addstudent" ></activity>


    </application>


</manifest>